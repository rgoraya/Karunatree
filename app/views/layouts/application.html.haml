!!!
%html
  %head
    %title= @title
    = stylesheet_link_tag "ktree-main"
    = yield :include_custom_stylesheet
    = javascript_include_tag :defaults
    = yield :include_custom_javascript_head
    %script{:type => "text/javascript", :src => "http://use.typekit.com/wsn0ttv.js"}
    %script{:type => "text/javascript"}
      :plain
        try{Typekit.load();}catch(e){}
  
  %body
    #header Karunatree
    = render :partial => "shared/navigation"
    .content-container
      .content-main
        -if flash[:notice]
          #notice= flash[:notice]
        = @content_for_layout
     
    = render :partial => "shared/debug"
    = yield :include_custom_javascript_end
    = render :partial  => "shared/analytics"