  /var url = "http://onearth.jpl.nasa.gov/OnEarth_BMNG.kml";
  google.earth.fetchKml(ge, url, function(kmlObject){
  if (kmlObject) {
  // add the fetched KML to Earth
  currentKmlObject = kmlObject;
  ge.getFeatures().appendChild(currentKmlObject);
