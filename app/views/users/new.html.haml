- content_for(:include_custom_stylesheet) do
  = stylesheet_link_tag "ktree-forms"
  
%h1 Sign up
- form_for @user, :html => { :multipart  => true } do |form|
  %fieldset
    %legend Please enter your details...
    = error_messages_for "user"
    .form-row
      %label{:for => "email"} Email &nbsp;
      = form.text_field :email, :size => User::EMAIL_SIZE, :maxlength => User::EMAIL_MAX_LENGTH
    .form-row
      %label{:for => "username"} Username &nbsp;
      = form.text_field :username, :size => User::USERNAME_SIZE, :maxlength => User::USERNAME_MAX_LENGTH
    .form-row
      %label{:for => "first_name"} First Name &nbsp;
      = form.text_field :first_name
    .form-row
      %label{:for => "last_name"} Last Name &nbsp;
      = form.text_field :last_name
    .form-row
      %label{:for => "password"} Password &nbsp;
      = form.password_field :password, :size => User::PASSWORD_SIZE, :maxlength => User::PASSWORD_MAX_LENGTH
    .form-row
      %label{:for => "password_confirmation"} Confirm Password &nbsp;
      = form.password_field :password_confirmation, :size => User::PASSWORD_SIZE, :maxlength => User::PASSWORD_MAX_LENGTH
    .form-row
      %label{:for => "account_type"} Account Type &nbsp;
      = form.select "account_type", "<option value=\"Kid\">Kid</option><option value=\"Parent\">Parent</option><option value=\"Non-Parent Adult\">Non-Parent Adult</option>"
    .form-row
      %label{ :for => "avatar" } Avatar &nbsp;
      = form.file_field :avatar
    .form-row
      = form.submit "Jump in!", :class => "submit"
