- title "Features"

%table
  %tr
    %th Locator
    %th Name
    %th Description
  - for feature in @features
    %tr
      %td= h feature.locator
      %td= h feature.name
      %td= h feature.description
      %td= link_to 'Show', feature
      %td= link_to 'Edit', edit_feature_path(feature)
      %td= link_to 'Destroy', feature, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Feature", new_feature_path
